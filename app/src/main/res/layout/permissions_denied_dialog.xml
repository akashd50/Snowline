<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@drawable/stop_number_background">
    <TextView
        android:id="@+id/perm_denied_tview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You won't be able to access any location based functionality. Are you sure?"
        android:fontFamily="monospace"
        android:textSize="@dimen/text_medium"
        android:textAlignment="center"
        android:textColor="@color/color_light_green"
        android:shadowColor="@color/color_glow_green"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal" />
    <View
        android:id="@+id/perm_denied_divider_i"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/perm_denied_grant_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button_background"
            android:text="Grant Permission"
            android:textSize="@dimen/text_small"
            android:textColor="@color/color_light_green"
            android:shadowColor="@color/color_glow_green"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_weight="0.95"/>
        <View
            android:id="@+id/perm_denied_divider_ii"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/color_white"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/perm_denied_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button_background"
            android:text="Cancel"
            android:textSize="@dimen/text_small"
            android:textColor="@color/color_light_green"
            android:shadowColor="@color/color_glow_green"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_weight="1.0"/>
    </TableRow>
</LinearLayout>